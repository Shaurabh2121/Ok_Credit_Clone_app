<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".SplashActivity2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/okcredit_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:id="@+id/Text1"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Trusted by 50,00,000+ Businesses"
        app:layout_constraintBottom_toBottomOf="parent"/>
   <View
       android:layout_width="80dp"
       app:layout_constraintTop_toBottomOf="@id/Text1"
       android:layout_height="76dp"
       android:id="@+id/v1"
       app:layout_constraintEnd_toStartOf="@id/v2"
       android:background="@drawable/secured"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:layout_width="80dp"
        app:layout_constraintTop_toBottomOf="@id/Text1"
        android:layout_height="90dp"
        android:id="@+id/v2"
        app:layout_constraintEnd_toStartOf="@id/v3"
        app:layout_constraintStart_toEndOf="@id/v1"
        android:background="@drawable/safe_trusted"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:layout_width="50dp"
        android:id="@+id/v3"
        app:layout_constraintTop_toBottomOf="@id/Text1"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v2"
        android:background="@drawable/pr"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v1"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:textStyle="bold"
        android:text="Secured"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/v2"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v2"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:text="@string/safe_trusted"
        android:textColor="@color/black"
        android:id="@+id/tv2"
        app:layout_constraintEnd_toStartOf="@id/v3"
        app:layout_constraintStart_toEndOf="@id/v1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv3"
        android:text="Private"
        android:textStyle="bold"

        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/v3"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v2" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:layout_marginBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@drawable/india_love"/>
</androidx.constraintlayout.widget.ConstraintLayout>