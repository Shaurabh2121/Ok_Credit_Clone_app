<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".loginActivityFragment.LagnuageFragment">
<ScrollView
    android:layout_width="match_parent"
    android:id="@+id/scrl"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp"
    app:layout_constraintBottom_toTopOf="@id/tvNext"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/tvwelcome"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_please"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Welcome"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvwelcome"
            android:text="Select your language"
            android:id="@+id/tvselect"
            android:textSize="24dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingStart="10dp"/>

                <CheckedTextView
                    android:layout_width="0dp"
                    android:checkMark="?android:listChoiceIndicatorMultiple"
                    android:checked="false"
                    app:layout_constraintTop_toBottomOf="@id/tvselect"
                    android:id="@+id/english"
                    android:contextClickable="true"
                    app:layout_constraintEnd_toStartOf="@id/hindi"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/english"
                    android:layout_height="80dp"/>
                <CheckedTextView
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:checkMark="?android:listChoiceIndicatorMultiple"
                    android:checked="false"
                    app:layout_constraintStart_toEndOf="@id/english"
                    app:layout_constraintTop_toBottomOf="@id/tvselect"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/hindi"
                    android:background="@drawable/hindi"
                    android:layout_height="80dp"/>

            <CheckedTextView
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/english"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toStartOf="@id/hinglish"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/marathi"
                android:checkMark="?android:listChoiceIndicatorMultiple"
                android:checked="false"
                android:background="@drawable/marathi"
                android:layout_height="80dp"/>
            <CheckedTextView
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@id/marathi"
                app:layout_constraintTop_toBottomOf="@id/hindi"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/hinglish"
                android:checkMark="?android:listChoiceIndicatorMultiple"
                android:checked="false"
                android:layout_margin="10dp"
                android:background="@drawable/hinglish"
                android:layout_height="80dp"/>

            <CheckedTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/marathi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tamil"
                android:layout_margin="10dp"
                android:checkMark="?android:listChoiceIndicatorMultiple"
                android:checked="false"
                android:id="@+id/gujrati"
                android:background="@drawable/gujrati"
                android:layout_height="80dp"/>
            <CheckedTextView
                android:layout_width="0dp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hinglish"
                app:layout_constraintStart_toEndOf="@id/gujrati"
                android:id="@+id/tamil"
                android:checkMark="?android:listChoiceIndicatorMultiple"
                android:checked="false"
                android:background="@drawable/tamil"
                android:layout_height="80dp"/>

            <CheckedTextView
                android:layout_width="0dp"
                android:id="@+id/telgu"
                app:layout_constraintTop_toBottomOf="@id/gujrati"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/punjabi"
                android:layout_margin="10dp"
                android:checkMark="?android:listChoiceIndicatorMultiple"
                android:checked="false"
                android:background="@drawable/telgu"
                android:layout_height="80dp"/>
            <CheckedTextView
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/tamil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/telgu"
                android:id="@+id/punjabi"
                android:checkMark="?android:listChoiceIndicatorMultiple"
                android:checked="false"
                android:layout_margin="10dp"
                android:background="@drawable/pnjabi"
                android:layout_height="80dp"/>

            <CheckedTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/malayalum"
                android:checkMark="?android:listChoiceIndicatorMultiple"
                android:checked="false"
                app:layout_constraintTop_toBottomOf="@id/telgu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/kannad"
                android:layout_margin="10dp"
                android:background="@drawable/malyalum"
                android:layout_height="80dp"/>
            <CheckedTextView
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/punjabi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/malayalum"
                android:id="@+id/kannad"
                android:checkMark="?android:listChoiceIndicatorMultiple"
                 android:checked="false"
                android:layout_margin="10dp"
                android:background="@drawable/kannad"
                android:layout_height="80dp"/>

            <CheckedTextView
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/malayalum"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/kannad"
                android:id="@+id/simpleCheckedTextView"
                android:checkMark="?android:listChoiceIndicatorMultiple"
                android:checked="false"
                android:layout_margin="10dp"
                android:background="@drawable/bangla"
                android:layout_height="80dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/kannad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/simpleCheckedTextView"
                android:layout_margin="10dp"
                android:layout_height="80dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<TextView
    android:layout_width="match_parent"
    android:text="Next"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginEnd="20dp"
    android:id="@+id/tvNext"
    android:padding="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:textSize="18dp"
    android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
    android:textColor="@color/white"
    android:background="@drawable/rectangle_green_next"
    android:layout_marginStart="20dp"
    android:textAlignment="viewStart"
    android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>