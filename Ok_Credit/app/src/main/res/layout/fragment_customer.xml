<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".HomeActivityFragment.HomeFragmentTab.CustomerFragment">

   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:id="@+id/customRecyclerView"
       android:layout_height="match_parent"
       app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/addCustomerLinear"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_green_next"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Add Customer"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_baseline_person_add_24"
            android:gravity="center"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




