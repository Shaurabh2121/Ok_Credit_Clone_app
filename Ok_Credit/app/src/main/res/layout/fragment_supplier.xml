<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivityFragment.HomeFragmentTab.SupplierFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/suplierRecyclerView"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Learn More"
        android:id="@+id/LearnMore"
        android:textColor="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addSupplierLinear"
        android:textStyle="bold"
        android:drawablePadding="8dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_baseline_help_outline_24"
        android:gravity="center"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:id="@+id/addSupplierLinear"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/LearnMore"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_green_next"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Add Supplier"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_baseline_person_add_24"
            android:gravity="center"
            android:layout_height="wrap_content"
            />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>