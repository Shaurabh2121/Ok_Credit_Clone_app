<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivityFragment.OTPMentionFragment">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:hint="Mobile Number"
    android:id="@+id/etMobileNumber"
    android:textColorHint="#4CAF50"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="70dp"
    android:drawablePadding="5dp"
    android:paddingStart="10dp"
    android:inputType="number"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp"
    android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
    android:textColor="@color/black"
    android:background="@drawable/mobile_otp_box"/>
    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/confrim"
        android:background="@drawable/ic_baseline_check_circle_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="13dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:layout_above="@id/etMobileNumber"
        android:text="An OTP will be send on the mentioned mobile number to verify the user "/>
</RelativeLayout>