<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".loginActivityFragment.VerifyMobileFragment">
<androidx.viewpager2.widget.ViewPager2
    android:layout_width="match_parent"
    android:id="@+id/viewPager"
    android:layout_height="match_parent"/>
<com.google.android.material.tabs.TabLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:tabGravity="start"
    android:layout_marginTop="140dp"
    android:id="@+id/tabLayout"
    app:tabIndicatorHeight="0dp"
    android:background="#FFFFFF"
    app:tabBackground="@drawable/tab_page_selecter"

    />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/tvVerify"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:layout_above="@id/tvTerm"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_green_next"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_baseline_security_24"
            android:layout_marginEnd="20dp"
            android:text="Verify Mobile"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            />
    </LinearLayout>



<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:id="@+id/tvTerm"
    android:textColor="@color/black"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="25dp"
    android:layout_alignParentBottom="true"
    android:text="By continuing, you agree to our Term of service and Privacy Policy"/>
</RelativeLayout>